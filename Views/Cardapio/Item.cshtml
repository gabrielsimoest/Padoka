@{
    ViewData["Title"] = "Detalhes do Item";
    Layout = null;
    var itemId = ViewData["ItemId"];
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Padoka</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/cardapio.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header class="cardapio-header item-header">
        <div class="container">
            <div class="header-content">
                <a href="/Cardapio" class="btn-back">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div class="header-info">
                    <h1 id="headerTitle">Carregando...</h1>
                </div>
                <div class="header-actions">
                    <button class="btn-cart" id="btnCarrinho" onclick="abrirCarrinho()">
                        <i class="fas fa-shopping-bag"></i>
                        <span class="cart-count" id="cartCount">0</span>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main class="item-main">
        <div class="container">
            <div class="loading-state" id="loadingState">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Carregando...</span>
                </div>
                <p>Carregando detalhes...</p>
            </div>

            <div class="error-state d-none" id="errorState">
                <i class="fas fa-exclamation-circle"></i>
                <h3>Item não encontrado</h3>
                <p>O item que você procura não existe ou foi removido.</p>
                <a href="/Cardapio" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i>Voltar ao Cardápio
                </a>
            </div>

            <div class="item-content d-none" id="itemContent">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="item-image-container">
                            <img src="" alt="" class="item-image" id="itemImage">
                            <span class="item-category-badge" id="itemCategory"></span>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="item-details">
                            <h1 class="item-name" id="itemName"></h1>
                            <p class="item-description" id="itemDescription"></p>

                            <div class="item-ingredients d-none" id="itemIngredientsSection">
                                <h4><i class="fas fa-list-ul me-2"></i>Ingredientes</h4>
                                <p id="itemIngredients"></p>
                            </div>

                            <div class="item-price-section">
                                <span class="item-price" id="itemPrice">R$ 0,00</span>
                            </div>

                            <div class="item-options d-none" id="itemOptionsSection">
                                <h4><i class="fas fa-plus-circle me-2"></i>Adicionais</h4>
                                <div class="options-list" id="optionsList">

                                </div>
                            </div>

                            <div class="item-notes">
                                <h4><i class="fas fa-comment-alt me-2"></i>Observações</h4>
                                <textarea class="form-control" 
                                          id="itemNotes" 
                                          placeholder="Ex: Sem cebola, bem passado..."
                                          rows="3"></textarea>
                            </div>

                            <div class="item-actions">
                                <div class="quantity-selector">
                                    <button class="btn-quantity" id="btnDecrement" onclick="decrementQuantity()">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span class="quantity-value" id="quantityValue">1</span>
                                    <button class="btn-quantity" id="btnIncrement" onclick="incrementQuantity()">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <button class="btn-add-to-cart" id="btnAddToCart" onclick="adicionarAoCarrinho()">
                                    <i class="fas fa-shopping-bag me-2"></i>
                                    <span>Adicionar</span>
                                    <strong id="totalPrice">R$ 0,00</strong>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="cart-overlay d-none" id="cartOverlay" onclick="fecharCarrinho()"></div>
    <aside class="cart-sidebar" id="cartSidebar">
        <div class="cart-header">
            <h3><i class="fas fa-shopping-bag me-2"></i>Meu Pedido</h3>
            <button class="btn-close-cart" onclick="fecharCarrinho()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="cart-body" id="cartBody">
            <div class="cart-empty" id="cartEmpty">
                <i class="fas fa-shopping-basket"></i>
                <p>Seu carrinho está vazio</p>
                <span>Adicione itens do cardápio para fazer seu pedido</span>
            </div>
            <div class="cart-items d-none" id="cartItems">
            </div>
        </div>
        <div class="cart-footer d-none" id="cartFooter">
            <div class="cart-total">
                <span>Total</span>
                <strong id="cartTotal">R$ 0,00</strong>
            </div>
            <button class="btn-checkout" id="btnCheckout" onclick="irParaCheckout()">
                <i class="fas fa-check me-2"></i>Finalizar Pedido
            </button>
        </div>
    </aside>

    <div class="modal fade" id="loginModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-user-lock me-2"></i>Login Necessário
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <div class="login-modal-icon">
                        <i class="fas fa-sign-in-alt"></i>
                    </div>
                    <h4>Faça login para continuar</h4>
                    <p>Para adicionar itens ao carrinho e fazer pedidos, você precisa estar logado.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        Continuar navegando
                    </button>
                    <a href="/Auth/Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="successToast" class="toast" role="alert">
            <div class="toast-header bg-success text-white">
                <i class="fas fa-check-circle me-2"></i>
                <strong class="me-auto">Sucesso!</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                Item adicionado ao carrinho!
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const ITEM_ID = @itemId;
    </script>
    <script src="~/js/cardapio.js" asp-append-version="true"></script>
    <script src="~/js/item-detalhe.js" asp-append-version="true"></script>
</body>
</html>
